<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefHeight="768" prefWidth="1024">
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Options">
                    <Menu text="Update Store">
                        <MenuItem text="Add Book"/>
                        <MenuItem text="Add CD"/>
                        <MenuItem text="Add DVD"/>
                    </Menu>
                    <MenuItem text="View store"/>
                    <MenuItem text="View cart"/>
                </Menu>
            </MenuBar>
            <Label text="CART" style="-fx-font-size: 50px; -fx-text-fill: #00ffff;" />
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10">
   <HBox spacing="10" alignment="CENTER_LEFT">
    <Label text="Filter:"/>
    <TextField fx:id="tfFilter"/>
    <RadioButton fx:id="radioBtnFilterId" text="By ID" selected="true">
        <toggleGroup>
            <ToggleGroup fx:id="filterCategory"/>
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="radioBtnFilterTitle" text="By Title" toggleGroup="$filterCategory"/>
</HBox>
            
            <TableView fx:id="tblMedia">
                <columns>
                    <TableColumn fx:id="colMediaTitle" text="Title"/>
                    <TableColumn fx:id="colMediaCategory" text="Category"/>
                    <TableColumn fx:id="colMediaCost" text="Cost"/>
                </columns>
            </TableView>
            
            <ButtonBar>
                <buttons>
                    <Button text="Play" fx:id="btnPlay"/>
					<Button text="Remove" fx:id="btnRemove" onAction="#btnRemovePressed"/>
                </buttons>
            </ButtonBar>
        </VBox>
    </center>
    
    <right>
        <VBox alignment="TOP_CENTER" spacing="10">
            <padding>
                <Insets top="50"/>
            </padding>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Total:" style="-fx-font-size: 24px;"/>
                <Label fx:id="lbTotalCost" text="0 $" style="-fx-font-size: 24px; -fx-text-fill: #00ffff;"/>
            </HBox>
<Button text="Place Order" 
        onAction="#placeOrder" 
        style="-fx-font-size: 24px; -fx-background-color: red; -fx-text-fill: white;"/>        </VBox>
    </right>
</BorderPane>